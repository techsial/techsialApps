<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.techsial.apps.simplesmsscheduler.utils.ScrollViewInterceptor
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.techsial.apps.simplesmsscheduler.utils.ListViewExpanded
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:scrollbars="none"></com.techsial.apps.simplesmsscheduler.utils.ListViewExpanded>


            <com.google.android.gms.ads.NativeExpressAdView
                android:id="@+id/adViewNativeCancelScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                ads:adSize="320x300"
                ads:adUnitId="@string/native_ad_id"></com.google.android.gms.ads.NativeExpressAdView>

        </LinearLayout>
    </com.techsial.apps.simplesmsscheduler.utils.ScrollViewInterceptor>
</RelativeLayout>