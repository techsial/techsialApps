<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/about_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/donations_description" />

    <Button
        android:theme="@style/TealButton"
        android:text="@string/donation_1_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donation_1_dollar"
        android:layout_alignBaseline="@+id/donation_3_dollars"
        android:layout_toStartOf="@+id/donation_3_dollars" />

    <Button
        android:theme="@style/CyanButton"
        android:text="@string/donation_3_dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donation_3_dollars"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/donations_description"/>

    <Button
        android:theme="@style/BlueButton"
        android:text="@string/donation_5_dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donation_5_dollars"
        android:layout_alignBaseline="@+id/donation_3_dollars"
        android:layout_toEndOf="@+id/donation_3_dollars" />

</RelativeLayout>